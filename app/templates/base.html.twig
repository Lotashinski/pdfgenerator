                        {% else %}
                            <a href="/login">Вход</a>
                        {% endif %}
                    {% endblock %}
                </div>
            </header>

        {% block main %}
        {% endblock %}

        {% block footer %}
        {% endblock %}
    </div>
{% endblock %}

<script src="/js/script.js"></script>

</body>
</html>
